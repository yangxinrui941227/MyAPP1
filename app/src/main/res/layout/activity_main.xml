        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read contacts"
        android:textAllCaps="false"
        android:id="@+id/main_btn10"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通知"
        android:textAllCaps="false"
        android:id="@+id/main_btn11"/>
