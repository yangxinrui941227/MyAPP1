        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调用相机"
        android:textAllCaps="false"
        android:id="@+id/main_btn12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="播放音频"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/main_btn13_1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂停音频"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/main_btn13_2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止音频"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/main_btn13_3"/>
